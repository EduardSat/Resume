.expirience
    flex_container()
    width 100%
.expirience__list-block
    display flex
    flex-direction column
    justify-content space-between
.expirience__list
    list-style none
    padding 0
    margin 0

.expirience-item__company
    display block
    color #000000
    font-size rem(26px)
    font-weight 700
    text-transform uppercase
    position relative
    margin 0
    padding-left 18px
    span
      font-weight 400
    &:before
      position absolute
      content ""
      width 20px
      left -2px
      top 4px
      height 20px
      background-color #000000
      border-radius 50%
.expirience-item__job
    display block
    color #000000
    font-size rem(26px)
    font-weight 400
    text-transform uppercase
    margin 0
.expirience-item__about
    display block
    color #000000
    font-size rem(15px)
    font-weight 400
    margin 0
