.contact
    flex-container()
    width 100%
    justify-content space-between
.contact__caption
    display block
    position relative
    &:after
      line_after()
.contact__caption__text
    font-size 2.125rem
    color #3d6cb0
    margin 0
    padding-left 7%
    text-transform uppercase
.contact__block
  display flex
  width 80%
  justify-content space-between
  align-items center
.contact__text
    display block
    color #3d6cb0
    font-size 1.5625rem
    font-weight 700
    margin 0
    padding-left: 10%
