.education
    display flex
    flex-direction column
    width 100%
.education-list
    display flex
    flex-direction column
    list-style-type none
    padding-left 0
    margin: 0
.education__list-item
    display flex
    flex-direction column
    width 100%
.education__caption
    display block
    position relative
    padding-left 24px
    color #3d6cb0
    background-repeat no-repeat
    &:before
      display none
      position absolute
      content ''
      width rem(148px)
      height rem(143px)
      background url(../images/haha.png)
.list-item__caption
    display block
    margin 0
    font-weight 400
    font-size rem(26px)
    span
      color #020202
.list-item__text-degree
    display block
    margin 0
    position relative
    text-transform uppercase
    font-size rem(26px)
    font-weight 700
    padding-left 18px
    color #3d6cb0
    span
      font-weight 400
      color #020202
    &::before
        position absolute
        content ""
        width 20px
        height 20px
        left -4px
        top 4px
        background-color #000000
        border-radius 50%
.list-item__about
    display block
    color #000000
    font-size rem(15px)
    font-weight 400
