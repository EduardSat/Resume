.profile
    flex-container()
    width 100%
.profile__text__profile
    display block
    color #3d6cb0
    position relative
    text-transform uppercase
    &:after
         position absolute
         content ""
         width: 12.0625rem;
         height: 0.2875rem;
         left rem(161px)
         top rem(16px)
         background-color #3d6cb0
.profile__text__profile__text
    display block
    margin 0
    font-size 0.9375rem
    width 74%
    font-weight 400
