//общие стили
body
  width 100%
  background-repeat no-repeat
  font-size 14px
  font-size 1.4rem
  margin 0
html
    box-sizing border-box
    font-size 100%
    font-family 'PT Sans', Arial, sans-serif

.flex-container
    display flex
    flex-direction column
    justify-content space-between
    margin 0
h1
  font-size 2.4rem
*
*::before
*::after
    box-sizing inherit
.main-caption
  font-size  2.125rem
  font-weight 700
  margin 0
